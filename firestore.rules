rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
      match /users/{userId}{
        match /private/data {
          allow create: if canCreateNewProfile();
          allow update: if canCreateNewProfile() && request.auth.uid == resource.data.uid;
        }
        match /public/data {
          allow create: if canCreateNewProfile();
          allow update: if canCreateNewProfile() && request.auth.uid == resource.data.uid;
        }
      }
    }

    //Functions
    function isLoggedIn(){
      return request.auth.uid != null;
    }

    function canCreateNewProfile(){
      let validUid = request.resource.data.uid == request.auth.uid;
      return isLoggedIn() && validUid;
    }

    //Boilerplate
  }  
}